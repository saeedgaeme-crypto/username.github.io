        // متغیرهای گردونه
        let isSpinning = false;
        let currentRotation = 0;

        // تابع تغییر صفحه
        function switchPage(pageId) {
            // غیرفعال کردن همه صفحات
            document.querySelectorAll('.page').forEach(page => {
                page.classList.remove('active');
            });
            
            // فعال کردن صفحه مورد نظر
            document.getElementById(pageId).classList.add('active');
            
            // به روز رسانی تب‌های فعال
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.getAttribute('data-page') === pageId) {
                    btn.classList.add('active');
                }
            });
            
            // اسکرول به بالا
            window.scrollTo({ top: 0, behavior: 'smooth' });
        }

        // تابع تغییر فیلتر بازی
        function switchGame(gameId) {
            // غیرفعال کردن همه بخش‌های بازی
            document.querySelectorAll('.game-section').forEach(section => {
                section.classList.remove('active');
            });
            
            // فعال کردن بخش بازی مورد نظر
            document.getElementById(gameId).classList.add('active');
            
            // به روز رسانی دکمه‌های فیلتر
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.classList.remove('active');
                if (btn.getAttribute('data-game') === gameId) {
                    btn.classList.add('active');
                }
            });
            
            // بارگذاری محصولات بازی مورد نظر
            loadProducts(gameId);
        }

        // تابع بارگذاری محصولات
        function loadProducts(gameId) {
            const productsGrid = document.querySelector(`#${gameId} .products-grid`);
            if (!productsGrid) return;
            
            productsGrid.innerHTML = '';
            
            products[gameId].forEach(product => {
                const productCard = document.createElement('div');
                productCard.className = 'product-card';
                
                // انتخاب آیکون مناسب بر اساس بازی
                let diamondIcon = 'fas fa-gem';
                if (gameId === 'freefire') diamondIcon = 'fas fa-fire';
                if (gameId === 'coc') diamondIcon = 'fas fa-crown';
                if (gameId === 'cod') diamondIcon = 'fas fa-crosshairs';
                if (gameId === 'pubg') diamondIcon = 'fas fa-bullseye';
                
                productCard.innerHTML = `
                    <div class="product-header">
                        <span class="product-badge">${product.badge}</span>
                        <div class="diamond ${product.diamondClass}">
                            <i class="${diamondIcon}"></i>
                        </div>
                        <div class="product-name">${product.name}</div>
                    </div>
                    <div class="product-body">
                        <div class="price-container">
                            <div class="old-price">${product.oldPrice} تومان</div>
                            <div class="current-price">${product.price} تومان</div>
                        </div>
                        <button class="buy-btn" onclick="buyProduct('${gameId}', ${product.id})">
                            <i class="fas fa-shopping-cart"></i> خرید محصول
                        </button>
                    </div>
                `;
                
                productsGrid.appendChild(productCard);
            });
        }

        // تابع خرید محصول
        function buyProduct(gameId, productId) {
            const product = products[gameId].find(p => p.id === productId);
            if (!product) return;
            
            // بازی‌های مختلف
            const gameNames = {
                freefire: "فری فایر",
                coc: "کلش آف کلنز",
                cod: "کالاف دیوتی موبایل",
                pubg: "پابجی موبایل"
            };
            
            alert(`در حال انتقال به صفحه پرداخت برای ${product.name} ${gameNames[gameId]} به مبلغ ${product.price} تومان\n\nتوجه: برای تکمیل خرید با ادمین سعید آرتور در ایتا تماس بگیرید:\nhttps://eitaa.com/Admin_Arthur`);
            
            // در حالت واقعی، کاربر به صفحه پرداخت هدایت می‌شد
            // window.open(`https://eitaa.com/Admin_Arthur?product=${gameId}-${productId}`, '_blank');
        }

        // تابع بارگذاری قوانین
        function loadRules() {
            const rulesList = document.getElementById('rules-list');
            if (!rulesList) return;
            
            rulesList.innerHTML = '';
            
            rules.forEach(rule => {
                const ruleItem = document.createElement('li');
                ruleItem.className = 'rule-item';
                ruleItem.innerHTML = `
                    <div class="rule-title">${rule.title}</div>
                    <div class="rule-text">${rule.text}</div>
                `;
                
                rulesList.appendChild(ruleItem);
            });
        }

        // تابع بارگذاری لینک‌ها
        function loadLinks() {
            const linksContainer = document.querySelector('.links-container');
            if (!linksContainer) return;
            
            linksContainer.innerHTML = '';
            
            links.forEach(link => {
                const linkCard = document.createElement('div');
                linkCard.className = 'link-card';
                linkCard.innerHTML = `
                    <i class="${link.icon}"></i>
                    <h3>${link.title}</h3>
                    <p>${link.description}</p>
                    <a href="${link.url}" class="link-btn" target="_blank">
                        <i class="fas fa-external-link-alt"></i> ورود به کانال
                    </a>
                `;
                
                linksContainer.appendChild(linkCard);
            });
        }

        // تابع ایجاد گردونه شانس
        function createWheel() {
            const wheel = document.getElementById('wheel');
            if (!wheel) return;
            
            wheel.innerHTML = '';
            
            const prizeCount = wheelPrizes.length;
            const anglePerPrize = 360 / prizeCount;
            
            wheelPrizes.forEach((prize, index) => {
                const wheelItem = document.createElement('div');
                wheelItem.className = 'wheel-item';
                wheelItem.style.backgroundColor = prize.color;
                wheelItem.style.transform = `rotate(${index * anglePerPrize}deg)`;
                
                const text = document.createElement('div');
                text.innerHTML = prize.title;
                text.style.transform = `rotate(${anglePerPrize/2}deg)`;
                text.style.transformOrigin = '0 0';
                text.style.position = 'absolute';
                text.style.left = '60%';
                text.style.top = '10%';
                text.style.width = '100%';
                text.style.textAlign = 'left';
                text.style.fontSize = '14px';
                
                wheelItem.appendChild(text);
                wheel.appendChild(wheelItem);
            });
        }

        // تابع چرخاندن گردونه
        function spinWheel() {
            if (isSpinning) return;
            
            isSpinning = true;
            const spinBtn = document.getElementById('spin-btn');
            const wheel = document.getElementById('wheel');
            const result = document.getElementById('result');
            
            // غیرفعال کردن دکمه
            spinBtn.disabled = true;
            spinBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> در حال چرخش...';
            
            // پنهان کردن نتیجه قبلی
            result.classList.remove('active');
            
            // چرخش تصادفی (بین 3 تا 5 دور کامل + جایزه تصادفی)
            const spins = 3 + Math.floor(Math.random() * 3);
            const prizeIndex = Math.floor(Math.random() * wheelPrizes.length);
            const prize = wheelPrizes[prizeIndex];
            
            // زاویه چرخش نهایی
            const anglePerPrize = 360 / wheelPrizes.length;
            const finalRotation = spins * 360 + (prizeIndex * anglePerPrize);
            
            // اعمال چرخش با انیمیشن
            currentRotation += finalRotation;
            wheel.style.transform = `rotate(${currentRotation}deg)`;
            
            // نمایش نتیجه پس از اتمام چرخش
            setTimeout(() => {
                document.getElementById('prize-title').textContent = `تبریک! شما ${prize.title} برنده شدید`;
                document.getElementById('prize-description').textContent = prize.description;
                document.getElementById('prize-code').textContent = prize.code;
                
                result.classList.add('active');
                
                // فعال کردن دکمه
                spinBtn.disabled = false;
                spinBtn.innerHTML = '<i class="fas fa-redo"></i> چرخاندن گردونه';
                isSpinning = false;
                
                // اسکرول به نتیجه
                result.scrollIntoView({ behavior: 'smooth', block: 'center' });
            }, 5000);
        }

        // تابع ثبت فرم واسطه
        function submitMediationForm(e) {
            e.preventDefault();
            
            const name = document.getElementById('name').value;
            const game = document.getElementById('game').value;
            const type = document.getElementById('type').value;
            const value = document.getElementById('value').value;
            const details = document.getElementById('details').value;
            
            // نام‌های بازی
            const gameNames = {
                freefire: "فری فایر",
                coc: "کلش آف کلنز",
                cod: "کالاف دیوتی موبایل",
                pubg: "پابجی موبایل",
                other: "سایر بازی‌ها"
            };
            
            // نوع درخواست
            const typeNames = {
                buy: "خرید اکانت",
                sell: "فروش اکانت",
                mediation: "واسطه‌گری برای معامله"
            };
            
            alert(`درخواست واسطه شما با موفقیت ثبت شد!\n\nنام: ${name}\nبازی: ${gameNames[game]}\nنوع درخواست: ${typeNames[type]}\nارزش معامله: ${value} تومان\n\nبرای تکمیل فرآیند، لطفاً با ادمین سعید آرتور در ایتا تماس بگیرید:\nhttps://eitaa.com/Admin_Arthur`);
            
            // ریست فرم
            document.getElementById('mediation-form').reset();
            
            // در حالت واقعی، داده‌ها به سرور ارسال می‌شد
        }

        // مقداردهی اولیه زمانی که صفحه لود شد
        document.addEventListener('DOMContentLoaded', function() {
            // بارگذاری محصولات پیش‌فرض (فری فایر)
            loadProducts('freefire');
            
            // بارگذاری قوانین
            loadRules();
            
            // بارگذاری لینک‌ها
            loadLinks();
            
            // ایجاد گردونه شانس
            createWheel();
            
            // افزودن event listener به تب‌ها
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const pageId = this.getAttribute('data-page');
                    switchPage(pageId);
                });
            });
            
            // افزودن event listener به دکمه‌های فیلتر بازی
            document.querySelectorAll('.filter-btn').forEach(btn => {
                btn.addEventListener('click', function() {
                    const gameId = this.getAttribute('data-game');
                    switchGame(gameId);
                });
            });
            
            // افزودن event listener به دکمه چرخاندن گردونه
            document.getElementById('spin-btn').addEventListener('click', spinWheel);
            
            // افزودن event listener به فرم واسطه
            document.getElementById('mediation-form').addEventListener('submit', submitMediationForm);
            
            // تنظیم تاریخ در فوتر
            const currentYear = new Date().getFullYear();
            const persianYear = currentYear - 621; // تبدیل به شمسی تقریبی
            document.querySelector('.copyright p').textContent = `© کلیه حقوق این وبسایت برای آرتور شاپ محفوظ است. ${persianYear}`;
        });
    </script>
</body>
</html>
